@model IEnumerable<Product>
@{
	ViewData["Title"] = "Product Lists";
}

<h2>Product Listing</h2>

<a asp-action="Create" asp-controller="Product" class="btn btn-secondary">Create Product</a>

@if (Model.Count() == 0)
{
	<p>No products are currentlu found</p>
}
else
{
<table class="table table-striped">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(m => m.First().Title)</th>
			<th>@Html.DisplayNameFor(m => m.First().Price)</th>
			<th>Links</th>
		</tr>
	</thead>
	<tbody>
			@foreach (Product product in Model)
			{
				<tr>
					<td>@Html.DisplayFor(p => product.Title)</td>
					<td>@Html.DisplayFor(p => product.Price)</td>
					<td>Update -- Delete</td>
				</tr>
			}
	</tbody>
</table>
}

